%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      = link_to('Bloggie', root_url, class: 'navbar-brand')
    #navbar
      - if current_user
        / %ul.nav.navbar-nav
        /   %li
        /     = link_to('New post', new_post_path)
        /   %li
        /     = link_to('Blog', blog_path(current_user))
        /   %li
        /     = link_to('Friends', feed_path(current_user))
        /   %li
        /     = link_to('Profile', user_path(current_user))

    .nav.navbar-text.navbar-right
      - if current_user
        = link_to profile_path do
          %span.glyphicon.glyphicon-user
          %span>= current_user.username
          
        = link_to 'Log out', session_path, class: "btn btn-xs btn-default", method: :delete
      - else
        = link_to 'Log in', new_session_path, class: "btn btn-xs btn-default"
        or
        = link_to 'Sign up', new_user_path, class: "btn btn-xs btn-default"


