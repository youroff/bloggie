%nav.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      = link_to('Bloggie', root_url, :class => 'navbar-brand')
    #navbar
      - if current_user
        %ul.nav.navbar-nav
          %li
            = link_to('New post', new_post_path)
          %li
            = link_to('Blog', blog_path(current_user))
          %li
            = link_to('Friends', feed_path(current_user))
          %li
            = link_to('Profile', user_path(current_user))

    .nav.navbar-text.navbar-right
      - if current_user
        Logged in as
        %strong= current_user.username+'. '
        = link_to('Log out', logout_path)
      - else
        = link_to('Log in', login_path)
        or
        = link_to('Sign up', signup_path)


